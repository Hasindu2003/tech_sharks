@page
@model HRMS.UI.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login – HRMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }
        .login-card {
            background: rgba(255,255,255,0.05);
            backdrop-filter: blur(16px);
            border: 1px solid rgba(255,255,255,0.12);
            border-radius: 20px;
            padding: 2.5rem 2rem;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.4);
            color: #fff;
        }
        .login-card h2 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
        }
        .login-card p.subtitle {
            color: rgba(255,255,255,0.55);
            font-size: 0.9rem;
            margin-bottom: 1.8rem;
        }
        .form-label { color: rgba(255,255,255,0.8); font-size: 0.85rem; }
        .form-control {
            background: rgba(255,255,255,0.08);
            border: 1px solid rgba(255,255,255,0.2);
            color: #fff;
            border-radius: 10px;
            padding: 0.65rem 1rem;
        }
        .form-control:focus {
            background: rgba(255,255,255,0.12);
            border-color: #e94560;
            box-shadow: 0 0 0 3px rgba(233,69,96,0.25);
            color: #fff;
        }
        .form-control::placeholder { color: rgba(255,255,255,0.3); }
        .btn-login {
            background: linear-gradient(135deg, #e94560, #c0392b);
            border: none;
            border-radius: 10px;
            padding: 0.7rem;
            font-weight: 600;
            letter-spacing: 0.04em;
            transition: opacity 0.2s;
        }
        .btn-login:hover { opacity: 0.88; }
        .divider { border-color: rgba(255,255,255,0.12); margin: 1.2rem 0; }
        a.link { color: #e94560; text-decoration: none; }
        a.link:hover { text-decoration: underline; }
        .brand { font-size: 1rem; color: rgba(255,255,255,0.4); margin-bottom: 1.5rem; letter-spacing: 0.08em; text-transform: uppercase; }
    </style>
</head>
<body>
<div class="login-card">
    <div class="brand">HRMS</div>
    <h2>Welcome back</h2>
    <p class="subtitle">Sign in to your account</p>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size:0.85rem;"></div>

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email address</label>
            <input asp-for="Input.Email" class="form-control" placeholder="you@example.com" autocomplete="email" />
            <span asp-validation-for="Input.Email" class="text-danger" style="font-size:0.8rem;"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Input.Password" class="form-label">Password</label>
            <input asp-for="Input.Password" class="form-control" placeholder="••••••••" autocomplete="current-password" />
            <span asp-validation-for="Input.Password" class="text-danger" style="font-size:0.8rem;"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" />
            <label asp-for="Input.RememberMe" class="form-check-label" style="color:rgba(255,255,255,0.6);font-size:0.85rem;">Remember me</label>
        </div>

        <button type="submit" class="btn btn-danger btn-login w-100 text-white">Sign In</button>
    </form>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
